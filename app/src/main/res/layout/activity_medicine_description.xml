<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/background"
    >

    <include
        android:id="@+id/med_desc_toolbar"
        layout="@layout/toolbar_layout"
        />

    <LinearLayout
        android:layout_below="@+id/med_desc_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


    <android.support.v7.widget.CardView
        android:layout_marginTop="5dp"
        android:padding="5dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        app:cardBackgroundColor="#EF3D5F"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        app:cardCornerRadius="5dp"
        app:cardElevation="5dp"
        >


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:padding="5dp"
                android:layout_width="42dp"
                android:layout_height="42dp"
                android:src="@drawable/medica_drug_pill"
                android:id="@+id/imageView"
                android:layout_centerVertical="true"
                android:layout_alignParentStart="true"
                android:layout_marginStart="32dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Paracetamol 500 mg"
                android:textSize="21sp"
                android:textStyle="bold"
                android:textColor="#ffffff"
                android:id="@+id/textView2"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@+id/imageView"
                android:layout_marginStart="27dp" />

        </RelativeLayout>


    </android.support.v7.widget.CardView>


        <android.support.v7.widget.CardView
            android:layout_marginTop="5dp"
            android:padding="5dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            app:cardBackgroundColor="#9B58B5"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            app:cardCornerRadius="5dp"
            app:cardElevation="5dp"
            >

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start Date - "
        android:textSize="15sp"
        android:textStyle="bold"
        android:textColor="#ffffff"
        android:layout_marginStart="20dp"
        android:id="@+id/textView6"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="12-6-2016"
        android:textSize="21sp"
        android:textStyle="bold"
        android:textColor="#ffffff"
        android:id="@+id/textView7"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@+id/textView6" />

    <ImageView
        android:layout_marginRight="10dp"
        android:padding="2dp"
        android:layout_width="42dp"
        android:layout_height="42dp"
        android:src="@drawable/calendar"
        android:id="@+id/imageView2"
        android:layout_marginEnd="14dp"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_marginTop="5dp"
            android:padding="5dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            app:cardBackgroundColor="#E77E23"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            app:cardCornerRadius="5dp"
            app:cardElevation="5dp"
           >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">


                <TextView
                    android:layout_marginRight="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="14-06-2016"
                    android:textSize="21sp"
                    android:textStyle="bold"
                    android:textColor="#ffffff"
                    android:layout_centerVertical="true"
                    android:layout_toEndOf="@+id/textView3"
                    android:id="@+id/textView5" />

                <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="End Date - "
                android:textSize="15sp"
                android:textStyle="bold"
                android:textColor="#ffffff"
                    android:layout_marginStart="11dp"
                    android:id="@+id/textView3"
                    android:layout_centerVertical="true"
                    android:layout_toEndOf="@+id/imageView3" />

                <ImageView
                android:layout_marginLeft="30dp"
                android:padding="5dp"
                android:layout_width="42dp"
                android:layout_height="42dp"
                android:src="@drawable/calendar"
                    android:id="@+id/imageView3"
                android:layout_marginStart="19dp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentStart="true" />
            </RelativeLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_marginTop="5dp"
            android:padding="5dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            app:cardBackgroundColor="#23A7F1"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            app:cardCornerRadius="5dp"
            app:cardElevation="5dp"
            >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:padding="2dp"
                    android:layout_width="42dp"
                    android:layout_height="42dp"
                    android:src="@drawable/alarm_clock"
                    android:layout_centerVertical="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="16dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="10:00 AM"
                    android:textSize="21sp"
                    android:textStyle="bold"
                    android:textColor="#ffffff"
                    android:layout_marginStart="68dp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentStart="true"
                    android:id="@+id/textView8" />
            </RelativeLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_marginTop="5dp"
            android:padding="5dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            app:cardBackgroundColor="#F8CA14"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            app:cardCornerRadius="5dp"
            app:cardElevation="5dp"
            >


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:padding="5dp"
                    android:layout_width="42dp"
                    android:layout_height="42dp"
                    android:src="@drawable/edit"
                    android:layout_centerVertical="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="32dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Remark"
                    android:textSize="21sp"
                    android:textStyle="bold"
                    android:textColor="#ffffff"
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true"
                    android:id="@+id/textView9" />

            </RelativeLayout>


        </android.support.v7.widget.CardView>

    </LinearLayout>
</RelativeLayout>

